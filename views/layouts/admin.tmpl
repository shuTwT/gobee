                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                            {CurrentUser.Name}
                        </p>
                        <p class="text-xs text-gray-500 dark:text-gray-400 truncate">
                            {CurrentUser.Email}
                        </p>
                    </div>
                    <button onclick="logout()" class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

    </aside>
    <div class="flex-1 flex flex-col">
        <header class="bg-white h-16 px-4 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center justify-between h-full">
                <h1 class="text-xl font-bold text-blue-600 dark:text-blue-400">内容管理</h1>
            </div>
        </header>
        <main class="flex-1">
            {{embed}}
        </main>

    </div>
</div>

<script>
function logout() {
    if (confirm('确定要登出吗？')) {
        // 发送登出请求
        fetch('/logout', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (response.ok) {
                window.location.href = '/login';
            } else {
                alert('登出失败，请重试');
            }
        })
        .catch(error => {
            console.error('登出错误:', error);
            alert('登出失败，请重试');
        });
    }
}
</script>
